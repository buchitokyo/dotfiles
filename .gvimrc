" ============================================
" ウィンドウサイズ
" ============================================
set lines=55
set columns=180

" ============================================
" 見た目
" ============================================
set background=dark
colorscheme molokai          " .vimrcと統一

" GUI要素を非表示（シンプルに）
set guioptions-=T            " ツールバー非表示
set guioptions-=m            " メニューバー非表示
set guioptions-=r            " 右スクロールバー非表示
set guioptions-=L            " 左スクロールバー非表示
set guioptions-=e            " タブをCUI風に

" ============================================
" フォント（Mac）
" ============================================
if has('mac')
  set guifont=Menlo:h14
  " set guifont=HackGen:h14    " HackGenを使う場合
endif

" ============================================
" 透過（お好みで）
" ============================================
" if has('mac')
"   set transparency=5
" endif

" ============================================
" カーソル
" ============================================
set guicursor=a:blinkon0     " カーソル点滅なし

